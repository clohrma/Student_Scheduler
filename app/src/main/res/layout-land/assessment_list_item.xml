<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@color/assessment_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/assessmentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="@string/assessment_name_land"/>

        <TextView
            android:id="@+id/assessmentStartDateTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/date_ex"
            app:layout_constraintStart_toEndOf="@+id/assessmentNameTV"/>

        <TextView
            android:id="@+id/assessmentEndDateTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/date_ex"
            app:layout_constraintStart_toEndOf="@+id/assessmentStartDateTV"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>