<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/courseNameTV"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:text="@string/assessment_name"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            android:id="@+id/courseStartDateTV"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:text="@string/assessment_start_date_ex"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/courseNameTV"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            android:id="@+id/courseEndDateTV"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:text="@string/assessment_end_date_ex"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/courseStartDateTV"
            tools:layout_editor_absoluteY="21dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>