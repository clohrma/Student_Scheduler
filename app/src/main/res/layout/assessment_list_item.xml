<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@color/assessment_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/assessmentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/assessment_name"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            android:id="@+id/assessmentStartDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/assessment_start_date_ex"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/assessmentNameTV"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            android:id="@+id/assessmentEndDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/assessment_end_date_ex"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/assessmentStartDateTV"
            tools:layout_editor_absoluteY="21dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>