<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseDetails">

    <ScrollView
        android:id="@+id/courseDetails_SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/course_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/courseNameET"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:autofillHints="courseNameET"
                    android:hint="@string/course_name_ex"
                    android:inputType="text"
                    android:textColorHint="#757575" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/course_start_date"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/courseStartDateET"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:autofillHints="startDate"
                    android:hint="@string/course_start_date_ex"
                    android:inputType="date"
                    android:textColorHint="#757575" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/course_end_date"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/courseEndDateET"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:autofillHints="endDate"
                    android:hint="@string/course_end_date_ex"
                    android:inputType="date"
                    android:textColorHint="#757575" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:text= "@string/share_note"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/courseShareNoteET"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:autofillHints="endDate"
                    android:hint="@string/notes"
                    android:inputType="date"
                    android:textColorHint="#757575" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/courseStatusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveCourse"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/save_term"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/deleteCourse"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_term"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assessmentListRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/courseDetailsFAB"
        app:layout_constraintTop_toBottomOf="@+id/courseDetails_SV" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/courseDetailsFAB"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/floating_add_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_36" />

</androidx.constraintlayout.widget.ConstraintLayout>